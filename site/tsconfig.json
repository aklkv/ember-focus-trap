{
  "extends": "@ember/app-tsconfig",
  "include": ["app", "tests", "types"],
  "compilerOptions": {
    "allowJs": true,
    "paths": {
      "site/tests/*": ["./tests/*"],
      "site/*": ["./app/*"],
      "*": ["./types/*"]
